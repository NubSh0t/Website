<script>
    function animateValue(id, start, end, time, prefix = '') {
        const obj = document.getElementById(id);
        const range = end - start;
        const startTime = performance.now();

        function step(currentTime) {
            const progress = Math.min((currentTime - startTime) / time, 1);
            const currentValue = Math.floor(start + range * progress);
            obj.innerText = prefix + currentValue.toLocaleString();

            if (progress < 1) {
                requestAnimationFrame(step);
            }
        }

        requestAnimationFrame(step);
    }


    // Example values - replace with Razor variables if needed
    animateValue("earnings", 0, 0, 2000);
    animateValue("influencers", 0, 5, 2000);
    animateValue("brands", 0, 1, 2000);
</script>



